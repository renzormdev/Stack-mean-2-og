<!-- index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <title>Crud mongo - Insumos</title>
</head>
<body>
    <div class="container" style="margin-top: 100px;">
        <a href="#" class="btn btn-danger mb-3" data-bs-toggle="modal" data-bs-target="#modalInsumoNuevo">Nuevo Insumo</a>

        <!-- Tabla Insumos -->
        <table id="tablaInsumos" class="table table-hover">
            <thead class="table-info">
                <tr>
                    <th style="display: none;">ID Insumo</th>
                    <th>Nombre Insumo</th>
                    <th>ID Proveedor</th>
                    <th>Precio Unitario</th>
                    <th>Stock</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% insumos.forEach((insumo) => { %>
                    <tr>
                        <td style="display: none;"><%= insumo.idinsumo %></td>
                        <td><%= insumo.nominsumo %></td>
                        <td><%= insumo.idproveedor %></td>
                        <td><%= insumo.preUni %></td>
                        <td><%= insumo.stock %></td>
                        <td>
                            <a type="button" class="btnEditar btn btn-outline-primary bi bi-pencil"></a>
                            <a href="/borrar/insumo/<%= insumo._id %>" class="btn btn-outline-danger bi bi-trash"></a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Modal para Guardar Insumo -->
    <div id="modalInsumoNuevo" class="modal fade" tabindex="-1" aria-labelledby="modalInsumoNuevo" aria-hidden="true" data-bs-backdrop="static">
        <!-- Contenido del modal para crear nuevo insumo -->
    </div>

    <!-- Modal para Editar Insumo -->
    <div id="modalInsumoEditar" class="modal fade" tabindex="-1" aria-labelledby="modalInsumoEditar" aria-hidden="true" data-bs-backdrop="static">
        <!-- Contenido del modal para editar insumo -->
    </div>

    <!-- Bootstrap y Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="js/code.js"></script>
</body>
</html>
